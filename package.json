{
    "name": "aurora-launcher",
    "version": "0.0.3-dev",
    "description": "Launcher for Minecraft",
    "main": "build/main/index.js",
    "private": true,
    "scripts": {
        "dev": "concurrently -n main,preload -c blue.bold,yellow.bold \"npm:build:main\" \"npm:build:preload\" && concurrently \"vite\" \"npm:start:dev\" -k",
        "build": "concurrently -n main,preload,renderer -c blue.bold,yellow.bold,magenta.bold \"npm:build:main\" \"npm:build:preload\" \"npm:build:renderer\" --kill-others-on-fail",
        "build:main": "esbuild src/main/index.ts --platform=node --bundle --outdir=build/main --sourcemap=inline --external:electron",
        "build:preload": "esbuild src/preload/index.ts --platform=node --bundle --outdir=build/preload --sourcemap=inline --external:electron",
        "build:renderer": "vite build",
        "start:dev": "cross-env DEV=true nodemon --watch src --ext ts --ignore 'src/renderer' --exec electron .",
        "start:prod": "electron .",
        "clean": "rimraf build aurora-launcher-win32-x64",
        "prettier": "prettier --config .prettierrc.json --write src",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "pack": "electron-packager build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/Launcher.git"
    },
    "author": "AuroraTeam",
    "contributors": [
        "JoCat (https://github.com/JoCat)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AuroraTeam/Launcher/issues"
    },
    "homepage": "https://github.com/AuroraTeam/Launcher#readme",
    "devDependencies": {
        "@sweetalert2/theme-dark": "^5.0.5",
        "@types/semver": "^7.3.8",
        "@types/ws": "^7.4.7",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "aurora-api": "^0.2.0-beta",
        "concurrently": "^6.2.1",
        "cross-env": "^7.0.3",
        "electron": "^13.4.0",
        "electron-devtools-installer": "^3.2.0",
        "electron-packager": "^15.4.0",
        "esbuild": "^0.12.29",
        "eslint": "^7.32.0",
        "nodemon": "^2.0.13",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "sass": "^1.42.1",
        "sweetalert2": "^11.1.7",
        "typescript": "^4.4.3",
        "vite": "^2.5.10",
        "vite-plugin-vue2": "^1.8.2",
        "vue": "^2.6.14",
        "vue-router": "^3.5.2",
        "vue-sweetalert2": "^5.0.2",
        "vue-template-compiler": "^2.6.14"
    },
    "dependencies": {
        "p-map": "^5.1.0",
        "semver": "^7.3.5",
        "skinview3d": "^2.1.0",
        "source-map-support": "^0.5.20"
    }
}
