{
    "name": "aurora-launcher",
    "version": "0.1.0-dev",
    "description": "Launcher for Minecraft",
    "main": "build/main/index.js",
    "private": true,
    "scripts": {
        "dev": "concurrently -n main,preload,renderer,electron -c blue.bold,yellow.bold,magenta.bold,cyan.bold \"npm:build:main -- --watch --sourcemap=inline\" \"npm:build:preload -- --watch --sourcemap=inline\" \"vite\" \"npm:start:dev\"",
        "build": "concurrently -n main,preload,renderer -c blue.bold,yellow.bold,magenta.bold \"npm:build:main\" \"npm:build:preload\" \"npm:build:renderer\" --kill-others-on-fail",
        "build:main": "esbuild src/main/index.ts --platform=node --bundle --outdir=build/main --external:electron --loader:.png=file",
        "build:preload": "esbuild src/preload/index.ts --platform=node --bundle --outdir=build/preload --external:electron",
        "build:renderer": "vue-tsc --noEmit && vite build",
        "start:dev": "cross-env DEV=true nodemon --watch src --ext ts --ignore 'src/renderer' --exec electron .",
        "start:prod": "electron .",
        "clean": "rimraf build aurora-launcher-win32-x64",
        "prettier": "prettier --config .prettierrc.json --write src",
        "lint": "eslint src --ext .ts",
        "lint:fix": "npm run lint -- --fix",
        "pack": "electron-packager build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/Launcher.git"
    },
    "author": "AuroraTeam",
    "contributors": [
        "JoCat (https://github.com/JoCat)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AuroraTeam/Launcher/issues"
    },
    "homepage": "https://github.com/AuroraTeam/Launcher#readme",
    "devDependencies": {
        "@types/semver": "^7.3.8",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "@vitejs/plugin-vue": "^3.0.3",
        "concurrently": "^7.1.0",
        "cross-env": "^7.0.3",
        "electron": "^20.0.3",
        "electron-devtools-installer": "^3.2.0",
        "electron-packager": "^15.4.0",
        "esbuild": "^0.15.5",
        "eslint": "^8.13.0",
        "eslint-plugin-vue": "^9.3.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "sass": "^1.47.0",
        "source-map-support": "^0.5.21",
        "sweetalert2": "11.4.8",
        "typescript": "^4.6.3",
        "vite": "^3.0.9",
        "vue-tsc": "^0.40.1"
    },
    "dependencies": {
        "@auroralauncher/core": "^0.3.0",
        "@sweetalert2/theme-dark": "^5.0.10",
        "aurora-api": "^0.2.0-beta.2",
        "p-map": "^5.3.0",
        "semver": "^7.3.5",
        "skinview3d": "^2.2.1",
        "sweetalert2": "11.4.8",
        "vue": "^3.2.31",
        "vue-router": "^4.0.14",
        "vue-sweetalert2": "^5.0.2"
    }
}
