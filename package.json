{
    "name": "aurora-launcher",
    "version": "0.0.3-dev",
    "description": "Launcher for Minecraft",
    "main": "build/main/index.js",
    "scripts": {
        "dev": "npm run build:wor && concurrently \"vite\" \"npm:start:dev\" -k",
        "dev_webpack": "npm run build:wor && concurrently \"webpack serve --port 3000\" \"npm:start:dev\" -k",
        "build": "concurrently -n main,preload,renderer -c blue.bold,yellow.bold,magenta.bold \"npm:build:main\" \"npm:build:preload\" \"npm:build:renderer\"",
        "build_webpack": "concurrently -n main,preload,renderer -c blue.bold,yellow.bold,magenta.bold \"npm:build:main\" \"npm:build:preload\" \"npm:build_webpack:renderer\"",
        "build:wor": "concurrently -n main,preload -c blue.bold,yellow.bold \"npm:build:main\" \"npm:build:preload\"",
        "build:main": "esbuild src/main/index.ts --platform=node --bundle --outdir=build/main --sourcemap=inline --external:electron",
        "build:preload": "esbuild src/preload/index.ts --platform=node --bundle --outdir=build/preload --sourcemap=inline --external:electron",
        "build:renderer": "npm run build_vite:renderer",
        "build_vite:renderer": "vite build",
        "build_webpack:renderer": "webpack",
        "start:dev": "cross-env DEV=true electron .",
        "start:prod": "electron .",
        "clean": "rimraf build aurora-launcher-win32-x64",
        "prettier": "prettier --config .prettierrc.json --write src",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "pack": "electron-packager build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/Launcher.git"
    },
    "author": "AuroraTeam",
    "contributors": [
        "JoCat (https://github.com/JoCat)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AuroraTeam/Launcher/issues"
    },
    "homepage": "https://github.com/AuroraTeam/Launcher#readme",
    "devDependencies": {
        "@sweetalert2/theme-dark": "^5.0.5",
        "@types/semver": "^7.3.8",
        "@types/ws": "^7.4.7",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "aurora-api": "^0.2.0-beta",
        "concurrently": "^6.2.1",
        "copy-webpack-plugin": "^9.0.1",
        "cross-env": "^7.0.3",
        "css-loader": "^6.3.0",
        "electron": "^13.4.0",
        "electron-devtools-installer": "^3.2.0",
        "electron-packager": "^15.4.0",
        "eslint": "^7.32.0",
        "file-loader": "^6.2.0",
        "html-minimizer-webpack-plugin": "^3.2.0",
        "less": "^4.1.1",
        "less-loader": "^10.0.1",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "sass": "^1.42.1",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.3.0",
        "stylus": "^0.54.8",
        "stylus-loader": "^6.1.0",
        "sweetalert2": "^11.1.7",
        "ts-loader": "^9.2.6",
        "typescript": "^4.4.3",
        "vite": "^2.5.10",
        "vite-plugin-vue2": "^1.8.2",
        "vue": "^2.6.14",
        "vue-loader": "^15.9.8",
        "vue-router": "^3.5.2",
        "vue-sweetalert2": "^5.0.2",
        "vue-template-compiler": "^2.6.14",
        "webpack": "^5.54.0",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "esbuild": "^0.12.29",
        "p-map": "^5.1.0",
        "semver": "^7.3.5",
        "source-map-support": "^0.5.20",
        "webpack-dev-server": "^4.3.0"
    }
}
