{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "inlineSources": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "newLine": "lf",
        "noEmitOnError": true,
        "baseUrl": "src",
        "paths": {
            "@config": ["config.json"],
            "@runtime/*": ["renderer/runtime/*"],
            "@scripts/*": ["renderer/scripts/*"]
        },
        "types": [
            "vue-sweetalert2"
        ]
    },
}
